<h1>Listing issues</h1>
<%= link_to 'All Issues', issues_path %>
<%= render 'search' %>

<table class="table-striped">
  <thead>
    <tr>
      <th>Id: </th>
      <th>Title: <%= link_to "Sort",
                            issues_path(sort: 'title') %></th>
      <th>Description: <%= link_to "Sort",
                                  issues_path(sort: 'description') %></th>
      <th>Number of followers: <%= link_to "Sort",
                                   issues_path(sort: 'no_followers') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.id %></td>
        <td><%= issue.title %></td>
        <td><%= issue.description.html_safe %></td>
        <td><%= issue.no_followers %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
